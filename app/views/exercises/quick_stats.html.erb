<h1 class="mx-3 my-3">Quick stats</h1>

<%= link_to "Back to all exercises", exercises_path, class: "mx-3" %> <br><br>

<div class="d-flex justify-content-evenly flex-wrap gap-3 mx-2">
<div class="card text-dark bg-info mb-3" style="max-width: 18rem;">
  <div class="card-header">Quick stats</div>
  <div class="card-body">
    <h3 class="card-title">Exercise Count</h3>
    <p class="card-text text-center"><%= @exercise_count %></p>
  </div>
</div>

<div class="card text-dark bg-info mb-3" style="max-width: 18rem;">
  <div class="card-header">Quick stats</div>
  <div class="card-body">
    <h3 class="card-title">Total calories burnt</h3>
    <p class="card-text text-center"><%= @total_calories %></p>
  </div>
</div>
</div>