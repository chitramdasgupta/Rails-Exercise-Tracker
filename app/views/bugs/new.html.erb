<%= render 'shared/flash', status: 'danger' %>

<div class="mt-3">
<%= link_to "Back to all your exercises", exercises_path, class: "mx-3" %>
</div>

<div class="mx-3 my-4">
<%= form_with model:@bug, url: bugs_path, method: :post do |f| %>
  <div>
    <%= f.label :title %> <br>
    <%= f.text_field :title %>
  </div>
  <br>
  <div>
    <%= f.label :description %> <br>
    <%= f.text_area :description %>
  </div>
  <br>
  <%= f.submit "Submit Bug Report", class: "btn btn-primary" %>
<% end %>
</div>
