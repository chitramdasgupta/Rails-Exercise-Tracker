<%= render "shared/navbar" %>

<h1 class="text-center my-3">Log in to <strong>Exercise Tracker</strong></h1>

<div class="d-flex justify-content-center">

<% flash.each do |type, msg| %>
  <div class="alert alert-danger">
    <%= msg %>
  </div>
<% end %>

<%= form_with url: sessions_create_path do |f| %>
  <%= f.label :email%><br>
  <%= f.text_field :email%><br><br>


  <%= f.label :password%><br>
  <%= f.password_field :password%><br><br>

  <%= f.submit "Login" %>
<% end %>
</div>